<?xml version="1.0" encoding="utf-8"?>
    <ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg4"
        tools:context=".MainActivity">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_marginTop="12dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginTop="12dp"
                    android:text="Lamps"
                    android:fontFamily="casual"
                    android:textSize="40sp"
                    android:textColor="#000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>

            <GridLayout
                android:columnCount="1"
                android:alignmentMode="alignMargins"
                android:columnOrderPreserved="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    app:cardElevation="6dp"
                    app:cardCornerRadius="10dp"
                    android:layout_margin="6dp">


                    <LinearLayout

                        android:orientation="horizontal"
                        android:padding="12dp"
                        android:gravity="left"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:src="@drawable/lamp1"
                            android:layout_width="120dp"
                            android:layout_height="120dp"/>
                        <LinearLayout
                            android:padding="6dp"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            >
                        <TextView
                            android:padding="10dp"
                            android:textColor="#000000"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:text="Baguio White Fabric Shade Floor Lamp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            />

                        <Button
                            android:layout_gravity="right"
                            android:id="@+id/lamp1"
                            android:layout_width="120dp"
                            android:layout_height="40dp"
                            android:text="Add to cart" />

                    </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    app:cardElevation="6dp"
                    app:cardCornerRadius="12dp"
                    android:layout_margin="6dp">


                    <LinearLayout

                        android:orientation="horizontal"
                        android:padding="12dp"
                        android:gravity="left"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView

                            android:src="@drawable/lamp2"
                            android:layout_width="120dp"
                            android:layout_height="120dp"/>
                        <LinearLayout
                            android:padding="6dp"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            >
                        <TextView
                            android:padding="14dp"
                            android:textColor="#000000"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:text="Jensen White Fabric Shade Floor Lamp with Brown Base"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <Button
                            android:layout_gravity="right"
                            android:id="@+id/lamp2"
                            android:layout_width="120dp"
                            android:layout_height="40dp"
                            android:text="Add to cart" />
                        </LinearLayout>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    app:cardElevation="6dp"
                    app:cardCornerRadius="12dp"
                    android:layout_margin="6dp">


                    <LinearLayout

                        android:orientation="horizontal"
                        android:padding="12dp"
                        android:gravity="left"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView

                            android:src="@drawable/lamp3"
                            android:layout_width="120dp"
                            android:layout_height="120dp"/>
                        <LinearLayout
                            android:padding="6dp"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            >
                        <TextView
                            android:padding="14dp"
                            android:textColor="#000000"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:text="Black shade study lamp with metal base"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                            <Button
                                android:layout_gravity="right"
                                android:id="@+id/lamp3"
                                android:layout_width="120dp"
                                android:layout_height="40dp"
                                android:text="Add to cart" />

                    </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    app:cardElevation="6dp"
                    app:cardCornerRadius="12dp"
                    android:layout_margin="6dp">


                    <LinearLayout

                        android:orientation="horizontal"
                        android:padding="12dp"
                        android:gravity="left"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView

                            android:src="@drawable/lamp4"
                            android:layout_width="120dp"
                            android:layout_height="120dp"/>
                    <LinearLayout
                        android:padding="6dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >
                        <TextView
                            android:padding="14dp"
                            android:textColor="#000000"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:text="White glass Hanging Light"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <Button
                            android:layout_gravity="right"
                            android:id="@+id/lamp4"
                            android:layout_width="120dp"
                            android:layout_height="40dp"
                            android:text="Add to cart" />

                    </LinearLayout>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    app:cardElevation="6dp"
                    app:cardCornerRadius="12dp"
                    android:layout_margin="6dp">


                    <LinearLayout

                        android:orientation="horizontal"
                        android:padding="12dp"
                        android:gravity="left"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView

                            android:src="@drawable/lamp5"
                            android:layout_width="120dp"
                            android:layout_height="120dp"/>
                    <LinearLayout
                        android:padding="6dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >
                        <TextView
                            android:padding="14dp"
                            android:textColor="#000000"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:text="Lorenzo Beige Fabric Shade Floor Lamp "
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <Button
                            android:layout_gravity="right"
                            android:id="@+id/lamp5"
                            android:layout_width="120dp"
                            android:layout_height="40dp"
                            android:text="Add to cart" />

                    </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </GridLayout>
        </LinearLayout>
            <com.google.android.material.bottomnavigation.BottomNavigationView
                android:layout_width="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_height="wrap_content"
                android:id="@+id/bottomNav"/>
        </RelativeLayout>
    </ScrollView>
